{
  "compilerOptions": {
    "lib": [
      "esnext"
    ],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "useUnknownInCatchVariables": true,
    "strict": false,
    "incremental": true,
    "module": "nodenext",
    "target": "esnext",
    "moduleResolution": "nodenext",
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "~/*": [
        "src/*"
      ],
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
